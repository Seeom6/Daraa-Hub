# ============================================
# Daraa Platform - Production Environment
# ============================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control!

# ============================================
# MongoDB Configuration
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_1

# Application Database User
MONGO_APP_USERNAME=daraa_app
MONGO_APP_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_2

# Backup User
MONGO_BACKUP_USERNAME=daraa_backup
MONGO_BACKUP_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_3

# Read-Only User (for analytics)
MONGO_READONLY_USERNAME=daraa_readonly
MONGO_READONLY_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_4

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_5

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3001
APP_URL=https://api.daraa.com
CLIENT_URL=https://daraa.com

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Cookie Configuration
# ============================================
COOKIE_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# ============================================
# Twilio SMS Configuration
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=daraa-uploads-production

# ============================================
# Email Configuration (SMTP)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=Daraa Platform
EMAIL_FROM_ADDRESS=noreply@daraa.com

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=daraa-backups-production

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT=5

